<?xml version="1.0" encoding="iso-8859-1"?>

<idea-plugin>
    <id>com.github.ausmarton.cucumber-scala</id>
    <name>Cucumber for Scala</name>
    <version>2019.3.1</version>
    <vendor email="ausmarton@fernandes.io">Ausmarton Fernandes</vendor>

    <description><![CDATA[
      Enables Reference tracking of glue code when using cucumber-scala DSL.

      Requires Scala language integration from Community Repo and the JetBrains cucumber plugin.

      Issue tracking at https://github.com/ausmarton/intellij-cucumber-scala/issues

      Originally written by: Daniel Wegener
      email: daniel@wegener.me
      url: http://daniel.wegener.me
    ]]></description>

    <change-notes><![CDATA[
      2019.3.1: Release for IntelliJ 2019.3.1 (scala-plugin 2019.3.1)
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="193.0" />

    <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
         on how to target different products -->

    <!--<depends>com.intellij.modules.lang</depends>-->
    <depends>gherkin</depends>
    <depends>org.intellij.scala</depends>
    <depends>com.intellij.java</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="org.jetbrains.plugins.cucumber.steps">
        <cucumberJvmExtensionPoint
                implementation="com.github.danielwegener.intellij.cucumber.scala.CucumberScalaExtension"/>
    </extensions>

</idea-plugin>
